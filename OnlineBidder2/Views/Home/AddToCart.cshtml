@model IEnumerable<OnlineBidder2.Models.product>

@{
    ViewBag.Title = "AddToCart";
    int totalAmount = 0;
}

<div class="container">
    <h2>AddToCart</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.productName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartingPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th>
                Total Price
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            totalAmount += Convert.ToInt32(item.StartingPrice);
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.productName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartingPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <img src="@Url.Content(item.image)" width="100px" height="100px" />

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                

            </tr>
        }

    </table>
    <h4>Total Bill Amount is : @ViewBag.amount taka</h4>
    <hr />
    @if(ViewBag.amount == 0)
            {
                <h4>There is no item</h4>
            }
    else
    {
        <form action="/Home/checkout" method="post">
            <button type="submit">Checkout</button>
        </form>
    }

    @*<a href="~/Home/checkout" class="btn btn-info">Checkout</a>*@
</div>
